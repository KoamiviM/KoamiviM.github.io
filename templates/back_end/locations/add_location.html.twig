{% extends 'dashboard_layout.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block active_page %}Location{% endblock %}

{% block body %}
    <div class="row bott-wid">
        <div class="col-md-12 col-sm-12">
            <div class="card">

                <div class="card-header">
                    <h4>{% if action == 'edit' %}Edit{% elseif action == 'add' %}Add{% endif%} Location</h4>
                </div>

                <div class="card-body">
                    <form class="form-horizontal" method="post">
                    {{ form_start(form) }}

                        <div class="form-group">
                            <label class="col-md-2 col-sm-3">Parent location:</label>
                            <div class="col-md-10 col-sm-9">
                                {{ form_widget(form.parent) }}
                                {{ form_errors(form.parent) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 col-sm-3">Name:</label>
                            <div class="col-md-10 col-sm-9">
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 col-sm-12 text-right">
                                <button type="submit" class="btn theme-btn">Save</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script type="application/javascript">
        $(document).ready(function() {
        $('#location_parent').select2();
    });
    </script>
{% endblock %}
